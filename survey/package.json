{
  "name": "learning-play-audit-survey",
  "version": "0.10.0",
  "private": true,
  "main": "dist/index.js",
  "type": "module",
  "devDependencies": {
    "@babel/cli": "^7.12.10",
    "@babel/core": "^7.12.10",
    "@babel/eslint-parser": "^7.17.0",
    "@babel/plugin-transform-runtime": "^7.12.10",
    "@babel/preset-env": "^7.12.11",
    "@babel/preset-typescript": "^7.16.7",
    "@types/jest": "^27.4.1",
    "eslint": "^8.8.0",
    "eslint-plugin-flowtype": "^8.0.3",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "jest": "^27.5.1",
    "typescript": "^4.6.3"
  },
  "scripts": {
    "test": "jest",
    "build": "tsc && babel --extensions .ts src --out-dir dist",
    "postpack": "cp ./learning-play-audit-survey-0.10.0.tgz ../cdk-stacks/resources/emailSurveyLambda/survey/learning-play-audit-survey-0.10.0.tgz"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-typescript",
        {
          "parserOpts": {
            "strictMode": true
          }
        }
      ]
    ],
    "ignore": [
      "**/__tests__",
      "**/*.test.{js,ts}"
    ]
  },
  "eslintConfig": {
    "env": {
      "node": true
    },
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    }
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!src/**/*.d.ts"
    ],
    "transform": {
      "^.+\\.(js|jsx|ts|tsx)$": [
        "babel-jest",
        {
          "presets": [
            "@babel/preset-env"
          ],
          "plugins": [
            "@babel/plugin-transform-runtime"
          ]
        }
      ]
    }
  }
}
