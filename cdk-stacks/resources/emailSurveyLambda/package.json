{
  "name": "emailSurveyLambda",
  "version": "2.0.0",
  "description": "CDK EmailSurvey Lambda function",
  "main": "dist/index.js",
  "license": "Apache-2.0",
  "scripts": {
    "test": "jest",
    "tsc": "tsc",
    "build": "esbuild src/index.ts --bundle --platform=node --target=node14 --outfile=dist/index.js --external:canvas --external:sharp --external:chartjs-node-canvas --external:./node_modules/chartjs"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.48.0",
    "@aws-sdk/client-s3": "^3.48.0",
    "@aws-sdk/client-ses": "^3.50.0",
    "@aws-sdk/util-dynamodb": "^3.48.0",
    "@babel/runtime": "^7.17.2",
    "canvas": "^2.9.1",
    "chart.js": "^3.7.1",
    "chartjs-node-canvas": "^4.1.6",
    "docx": "^7.3.0",
    "es6-promise": "^4.2.8",
    "isomorphic-fetch": "^3.0.0",
    "learning-play-audit-survey": "file:./survey/learning-play-audit-survey-0.10.0.tgz",
    "mimemessage": "^1.0.5",
    "sharp": "^0.30.3"
  },
  "devDependencies": {
    "@babel/cli": "^7.17.6",
    "@babel/core": "^7.17.5",
    "@babel/eslint-parser": "^7.17.0",
    "@babel/plugin-transform-runtime": "^7.17.10",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-typescript": "^7.16.7",
    "@types/jest": "^27.5.0",
    "@types/sharp": "^0.30.2",
    "babel-jest": "^27.5.1",
    "esbuild": "^0.14.29",
    "eslint": "^8.14.0",
    "eslint-plugin-jest": "^26.1.5",
    "file-saver": "^2.0.5",
    "jest": "^27.5.1",
    "typescript": "^4.6.4"
  },
  "jest": {
    "transform": {
      "^.+\\.(js|jsx|ts|tsx)$": [
        "babel-jest",
        {
          "plugins": [
            "@babel/plugin-transform-runtime"
          ],
          "presets": [
            "@babel/preset-env",
            [
              "@babel/preset-typescript",
              {
                "parserOpts": {
                  "strictMode": true
                }
              }
            ]
          ]
        }
      ]
    },
    "transformIgnorePatterns": [
      "node_modules/(?!(learning-play-audit-survey)/)"
    ],
    "moduleFileExtensions": [
      "web.js",
      "js",
      "web.ts",
      "ts",
      "json",
      "node"
    ],
    "maxWorkers": "50%"
  }
}
